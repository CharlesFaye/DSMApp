<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoordonneeProducteur">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#E7F3E8"
            app:cardCornerRadius="12dp"
            app:cardElevation="5sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextTextEmailAddress3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="200dp"
                    android:ems="10"
                    android:hint="Adresse Mail"
                    android:typeface="serif"
                    android:inputType="textEmailAddress"
                    android:textAlignment="center"
                    android:textColorHint="@color/black"
                    android:textSize="22dp" />

                <EditText
                    android:id="@+id/editTextTextPassword4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Mot De Passe"
                    android:typeface="serif"
                    android:inputType="textPassword"
                    android:textAlignment="center"
                    android:textColorHint="@color/black"
                    android:textSize="22dp" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="#3BD767"
                    android:onClick="produits"
                    android:text="Se connecter"
                    android:typeface="serif"
                    app:cornerRadius="12sp" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:text="Vous n'avez pas encore de compte ?"
                    android:textColor="#3F51B5"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Qu'attendez-vous donc ? Lancez-vous dès à présent avec l'aventure Djay Sunu Mbay et profitez gratuitement de nos services et il se pourrait même que vous ayez envie d'acheter chez l'un(e) de nos producteur(ices). "
                    android:textColor="@color/black"
                    android:typeface="serif" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#3BD767"
                    android:onClick="inscrire"
                    android:text="S'inscrire ?"
                    android:typeface="serif"
                    app:cornerRadius="12sp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>